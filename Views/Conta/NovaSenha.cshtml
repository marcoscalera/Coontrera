@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Nova Senha";
}

@section Styles {
    <style>
        body {
            background-color: #f6eefb; /* */
            font-family: 'Afacad', sans-serif; /* */
        }
        .container-box {
            max-width: 450px; /* */
            background: white; /* */
            padding: 40px; /* */
            border-radius: 10px; /* */
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.15);
            margin-top: 50px;
        }
        .message-box { /* Estilo da mensagem de código enviado */
            /* display: none; Controlado por JS */
            background-color: #e9d8f4; /* Tom mais suave de roxo */
            color: #5e315b; /* */
            padding: 15px; /* */
            border-radius: 5px; /* */
            text-align: center; /* */
            margin-top: 20px; /* */
        }
        .timer {
            font-weight: bold; /* */
        }
        .form-label {
            color: #5e315b;
            font-weight: 500;
        }
    </style>
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="container-box w-100">
        <div class="text-center mb-4">
             <img src="~/images/logo-coontrera-sm.png" alt="Logo Coontrera" style="max-height: 80px;"/>
            <h3 class="mt-2" style="color: #5e315b;">Redefinir Senha</h3>
            <p class="text-muted">Informe seu telefone e crie uma nova senha.</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Erro))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Erro
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Sucesso))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Sucesso
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <div class="mt-2">
                     <a asp-controller="Conta" asp-action="Login" class="btn btn-sm btn-outline-success">Ir para Login</a>
                </div>
            </div>
        }

        <form asp-controller="Conta" asp-action="NovaSenha" method="post">
            <div class="mb-3 text-start">
                <label for="telefone" class="form-label">Telefone:</label>
                <input type="tel" id="telefone" name="telefone" class="form-control" placeholder="Telefone cadastrado" required>
            </div>
            <div class="mb-3 text-start">
                <label for="novaSenha" class="form-label">Nova Senha:</label>
                <input type="password" id="novaSenha" name="novaSenha" class="form-control" placeholder="Digite a nova senha" required>
            </div>
            <div class="mb-3 text-start">
                <label for="confirmarSenha" class="form-label">Confirmar Nova Senha:</label>
                <input type="password" id="confirmarSenha" name="confirmarSenha" class="form-control" placeholder="Confirme a nova senha" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">Alterar Senha</button>
        </form>
        
        <div class="text-center mt-3">
             <a asp-controller="Conta" asp-action="Login" class="text-link" style="color: #5e315b;">Voltar para o Login</a>
        </div>

