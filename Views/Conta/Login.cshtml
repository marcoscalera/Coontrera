@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}
<style>
    .login-container {
        max-width: 400px;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #d1a3ff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #b07ad7;
        }

    .btn-outline-primary {
        border-color: #d1a3ff;
        color: #5e315b;
    }

        .btn-outline-primary:hover {
            background-color: #b07ad7;
            color: white;
            border-color: #b07ad7;
        }

    .text-link {
        color: #5e315b;
        text-decoration: none;
    }

        .text-link:hover {
            text-decoration: underline;
            color: #a04e99;
        }
</style>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="login-container">
            <h2 class="text-center" style="color: #5e315b;">Entrar</h2>
            <form>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" class="form-control" placeholder="Email cadastrado">
                </div>
                <div class="mb-3">
                    <label class="form-label">Senha:</label>
                    <input type="password" class="form-control" placeholder="Senha">
                </div>
                <div class="text-end mb-3">
                <a asp-controller="Conta" asp-action="NovaSenha" class="text-link">Esqueci a senha</a>
                <button type="submit" class="btn btn-primary w-100">Acessar</button>
            </form>
            <div class="text-center mt-3">
                <p>Ainda não é cadastrado? Clique no botão abaixo</p>
            <a asp-controller="Conta" asp-action="Cadastro" class="btn btn-outline-primary w-100">Fazer Cadastro</a>
            </div>
        </div>
    </div>

       