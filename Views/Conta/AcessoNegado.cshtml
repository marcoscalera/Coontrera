@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .access-denied-container {
            min-height: calc(100vh - 200px);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 40px 15px;
        }

        .access-denied-container .icon-denied {
            font-size: 5rem;
            color: var(--danger-color, #dc3545);
            margin-bottom: 20px;
        }

        .access-denied-container h1.title-denied {
            font-family: var(--font-headings); 
            color: var(--primary-color); 
            font-size: 2.8rem;
            margin-bottom: 15px;
        }

        .access-denied-container p.message-denied {
            font-size: 1.1rem;
            color: var(--text-light); 
            max-width: 600px;
            margin-bottom: 25px;
        }
    </style>
}

<div class="access-denied-container" data-aos="fade-up">
    <div class="icon-denied">
        <i class="fas fa-user-lock"></i> </div>
    <h1 class="title-denied">@ViewData["Title"]</h1>
    <p class="message-denied">
        Você não tem permissão para acessar esta página ou recurso.
        Se você acredita que isso é um erro, por favor, contate o administrador do sistema.
    </p>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-home me-2"></i> Voltar para a Página Inicial
        </a>
        @if (Context.User.Identity.IsAuthenticated) 
        {
            <a asp-controller="Conta" asp-action="Logout" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-sign-out-alt me-2"></i> Sair e tentar com outra conta
            </a>
        }
    </div>
</div>

@section Scripts {
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 600,
            once: true
        });
    </script>
}