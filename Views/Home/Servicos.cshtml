        padding: 50px 0;
    }

    .service-title {
        font-weight: bold;
    }

    .service-item {
        margin-bottom: 50px;
    }

    .service-menu {
        background-color: #e9d8f4;
        padding: 15px;
        border-radius: 10px;
        display: inline-block;
    }

        .service-menu a {
            color: #5a3d5c;
            text-decoration: none;
            font-weight: bold;
            padding: 8px 15px;
            display: inline-block;
            transition: background 0.3s, color 0.3s;
            border-radius: 5px;
        }

            .service-menu a:hover {
                background-color: #cba6e0;
                color: white;
            }

    .service-image {
        max-width: 80%;
        height: auto;
