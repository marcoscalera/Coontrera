@section Scripts {
    <script>
        // o offset precisa ser ajustado de acordo com a altura da sua navbar sticky e da barra de navegação dos serviços
        var stickyNavMenuHeight = document.getElementById('servicesNavbar') ? document.getElementById('servicesNavbar').offsetHeight : 0;
        var mainNavbarHeight = 75; 
        var scrollSpyOffset = mainNavbarHeight + stickyNavMenuHeight + 20; 

        var scrollSpy = new bootstrap.ScrollSpy(document.body, {
            target: '#servicesNavbar',
            offset: scrollSpyOffset 
        });
        @* MARCOS PAULO CALERA *@
        document.querySelectorAll('.services-nav-menu a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                let targetId = this.getAttribute('href');
                let targetElement = document.querySelector(targetId);
                if(targetElement) {
                    let elementPosition = targetElement.getBoundingClientRect().top;
                    let offsetPosition = elementPosition + window.pageYOffset - (mainNavbarHeight + stickyNavMenuHeight);
                
                    window.scrollTo({
                        top: offsetPosition,
                        behavior: "smooth"
                    });
                }
            });
        });
    </script>
