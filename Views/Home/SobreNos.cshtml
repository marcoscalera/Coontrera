
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sobre Nós";
}
<style>
    body {
        background-color: #f6edf7;
        color: #5a245a;
        font-family: 'Afacad', sans-serif;
    }

    .container {
        max-width: 900px;
    }

    .btn-back {
        position: absolute;
        top: 10px;
