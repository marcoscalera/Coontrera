<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Coontrera</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Afacad, sans-serif;
        }

        .navbar-brand, .nav-link {
            color: #4A154B !important;
        }

        .navbar {
            background-color: #F8EAF6;
        }

        .hero-section {
            background: url('/logo.svg') no-repeat top center;
            background-size: contain;
            min-height: 500px;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            align-items: center;
            padding-bottom: 20px;
            color: #4A154B;
            padding: 100px 0;
            text-align: center;
        }

            .hero-section h1 {
                color: #2C003E;
                font-weight: bold;
            }

        .btn-primary {
            background-color: #7E328B;
            border-color: #7E328B;
        }

            .btn-primary:hover {
                background-color: #5E2370;
                border-color: #5E2370;
            }

        .services-section {
            padding: 50px 0;
            background-color: #FFFFFF;
        }

            .services-section h2 {
                color: #2C003E;
                margin-bottom: 40px;
            }

            .services-section h3 {
                color: #7E328B;
            }

        .cta-section {
            background-color: #F8EAF6;
            padding: 50px 0;
            text-align: center;
        }

            .cta-section h2 {
                color: #2C003E;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Inicio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="FaleConosco">Fale Conosco</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Servicos">Serviços Oferecidos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="SobreNos">Sobre Nós</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Conta" asp-action="Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="text-center mt-4 mb-4">
        <small>© @DateTime.Now.Year - Coontrera</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
